{
  "compilerOptions": {
    "target": "es6",
    "module": "es6",
    "moduleResolution": "node",
    "declaration": false,
    "noImplicitAny": false,
    "jsx": "react",
    "sourceMap": true,
    "allowSyntheticDefaultImports": true,
    "noLib": false,
    "suppressImplicitAnyIndexErrors": true,
    "esModuleInterop": true // これを追加
  },
  "compileOnSave": false,
  "exclude": ["node_modules"]
}

